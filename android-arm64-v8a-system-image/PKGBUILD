# Maintainer: lestb <tkhdlstfl dot l plus aur at gmail dot com>
# Contributor: Philipp Wolfer <ph.wolfer@gmail.com>
# Contributor: Joel Pedraza <joel@joelpedraza.com>
# Contributor: Jakub Schmidtke <sjakub-at-gmail-dot-com>
# Package Repository: https://github.com/mij-aur-packages/android-arm64-v8a-system-image

_rev=r07
_apilevel=24
pkgname=android-arm64-v8a-system-image
pkgver=${_apilevel}_${_rev}
pkgrel=1
pkgdesc='ARM 64 v8a System Image, latest API'
arch=('any')
url="http://developer.android.com/sdk/index.html"
license=('custom')
depends=("android-platform")
provides=("${pkgname}-${_apilevel}")
conflicts=("${pkgname}-${_apilevel}")
options=('!strip')
source=("http://dl-ssl.google.com/android/repository/sys-img/android/arm64-v8a-24_r07.zip"
        "source.properties")
sha1sums=('e8ab2e49e4efe4b064232b33b5eeaded61437d7f'
          '0afbfa989a65ea8c29fbb9a499713ca35c4b5f2d')

package() {
  _destdir="${pkgdir}/opt/android-sdk/system-images/android-${_apilevel}/default"
  mkdir -p "${_destdir}"
  mv "${srcdir}/arm64-v8a" "${_destdir}"
  install -Dm644 "${srcdir}/source.properties" "${_destdir}/arm64-v8a/"

  chmod -R ugo+rX "${pkgdir}/opt"
}
